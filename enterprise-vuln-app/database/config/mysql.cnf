# VulnCorp Enterprise MySQL Configuration
# Intentionally vulnerable configuration for security testing
# DO NOT USE IN PRODUCTION

[mysqld]
# Basic server configuration
port = 3306
socket = /var/run/mysqld/mysqld.sock
pid-file = /var/run/mysqld/mysqld.pid
basedir = /usr
datadir = /var/lib/mysql
tmpdir = /tmp

# Security settings (intentionally weak for testing)
# Allow root login from any host (VULNERABLE)
bind-address = 0.0.0.0

# Disable strict mode for easier SQL injection
sql_mode = ""

# Enable general query log (information disclosure)
general_log = 1
general_log_file = /var/log/mysql/general.log

# Enable error logging with verbose details
log_error = /var/log/mysql/error.log
log_error_verbosity = 3

# Enable slow query log
slow_query_log = 1
slow_query_log_file = /var/log/mysql/slow.log
long_query_time = 1

# Binary logging for data exposure
log_bin = /var/log/mysql/mysql-bin.log
binlog_format = STATEMENT

# Replication settings (vulnerable)
server-id = 1
gtid_mode = ON
enforce_gtid_consistency = ON

# Performance and connection settings
max_connections = 1000
max_connect_errors = 999999999
max_allowed_packet = 64M
thread_cache_size = 50
query_cache_size = 128M
query_cache_type = 1

# MyISAM settings
key_buffer_size = 256M
bulk_insert_buffer_size = 64M
myisam_sort_buffer_size = 128M
myisam_max_sort_file_size = 10G

# InnoDB settings
innodb_buffer_pool_size = 512M
innodb_log_file_size = 256M
innodb_log_buffer_size = 16M
innodb_flush_log_at_trx_commit = 2
innodb_lock_wait_timeout = 120

# Character set (vulnerable to injection)
character-set-server = utf8
collation-server = utf8_general_ci

# Allow loading local data (VULNERABLE)
local_infile = 1
secure_file_priv = ""

# Disable symbolic links (security measure - but we'll enable for testing)
# symbolic-links = 0

# Allow LOAD DATA LOCAL INFILE (VULNERABLE)
local_infile = 1

# Enable old password hashing (VULNERABLE)
# old_passwords = 1

# Disable strict SQL mode (allows SQL injection techniques)
sql_mode = "ONLY_FULL_GROUP_BY,ERROR_FOR_DIVISION_BY_ZERO,NO_AUTO_CREATE_USER"

# Network settings
max_allowed_packet = 1024M
interactive_timeout = 28800
wait_timeout = 28800

# Vulnerable settings for testing
# Allow empty passwords (VULNERABLE)
# validate_password_policy = LOW

# Enable user defined functions (VULNERABLE)
# automatic_sp_privileges = 1

[mysql]
default-character-set = utf8

[client]
default-character-set = utf8
port = 3306
socket = /var/run/mysqld/mysqld.sock

